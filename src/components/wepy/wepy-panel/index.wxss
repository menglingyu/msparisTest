.dj-panel {
  position: relative;
  background: #fff;
  margin-top: 10px;
  overflow: hidden;
}

.dj-panel:after {
    border-top-width: 1px;
    border-bottom-width: 1px;
}

.dj-panel-title {
  font-size: 14px;
  line-height: 1;
  color: #999;
  padding: 20px 15px 0 15px;
}

.dj-panel--without-margin-top {
  margin-top: 0;
}